<?xml version="1.0" encoding="utf-8"?>
<com.example.administrator.summarylearning.recyclerview.customlayout.MySwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/slide_item"
        android:layout_width="75dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@color/red"
        android:gravity="center"
        android:text="删除"
        android:textColor="@color/white" />
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="6dp">
        <ImageView
            android:id="@+id/item_big_image"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/item_pic" />

        <TextView
            android:id="@+id/item_big_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:text="I'm Olivia. Long time no see, do you miss me?"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_big_image" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp"
            android:tint="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_big_title"
            app:srcCompat="@drawable/ic_person_pin_black_24dp"
            android:layout_marginLeft="10dp"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/item_big_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Olivia"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            android:layout_marginLeft="8dp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="4dp"
            android:tint="@color/colorAccent"
            app:layout_constraintStart_toEndOf="@+id/item_big_name"
            app:layout_constraintTop_toBottomOf="@+id/item_big_title"
            app:srcCompat="@drawable/ic_favorite_border_black_24dp"
            android:layout_marginLeft="32dp"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/item_big_favorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="8837"
            app:layout_constraintBaseline_toBaselineOf="@+id/item_big_name"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            android:layout_marginLeft="8dp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="5dp"
            android:tint="@color/colorAccent"
            app:layout_constraintStart_toEndOf="@+id/item_big_favorites"
            app:layout_constraintTop_toBottomOf="@+id/item_big_title"
            app:srcCompat="@drawable/ic_insert_comment_black_24dp"
            android:layout_marginLeft="32dp"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/item_big_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="9939"
            app:layout_constraintBaseline_toBaselineOf="@+id/item_big_favorites"
            app:layout_constraintStart_toEndOf="@+id/imageView6"
            android:layout_marginLeft="8dp" />

    </android.support.constraint.ConstraintLayout>

</com.example.administrator.summarylearning.recyclerview.customlayout.MySwipeItemLayout>