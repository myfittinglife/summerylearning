<?xml version="1.0" encoding="utf-8"?>
<com.example.administrator.summarylearning.recyclerview.customlayout.MySwipeItemLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/slide_item"
        android:layout_width="75dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/red"
        android:gravity="center"
        android:text="删除"
        android:textColor="@color/white" />
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="6dp">

        <ImageView
            android:id="@+id/iv_item"
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:contentDescription="TODO"
            android:scaleType="centerCrop"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/item_pic" />
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="10dp"
            android:padding="1dp"
            android:tint="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_item"
            app:srcCompat="@drawable/ic_favorite_border_black_24dp"
            android:layout_marginLeft="8dp"
            tools:ignore="VectorDrawableCompat"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/item_favorites"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="10dp"
            android:text="8938"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            android:layout_marginLeft="8dp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="10dp"
            android:padding="1dp"
            android:tint="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_favorites"
            app:srcCompat="@drawable/ic_insert_comment_black_24dp"
            android:layout_marginLeft="8dp"
            tools:ignore="VectorDrawableCompat"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/item_comments"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="1138"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView5"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="5dp"
            android:padding="1dp"
            android:tint="@color/colorAccent"
            app:layout_constraintBottom_toTopOf="@+id/imageView3"
            app:layout_constraintStart_toEndOf="@+id/iv_item"
            app:srcCompat="@drawable/ic_person_pin_black_24dp"
            android:layout_marginLeft="8dp"
            tools:ignore="VectorDrawableCompat"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:text="Sophia"
            app:layout_constraintBottom_toTopOf="@+id/item_favorites"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView7"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/item_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="8dp"
            android:maxLines="2"
            android:text="张杰未·Live巡回演唱会"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/item_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_item"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp" />
    </android.support.constraint.ConstraintLayout>


</com.example.administrator.summarylearning.recyclerview.customlayout.MySwipeItemLayout>