<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".refreshandloadactivity.headlayout.MyHeadrActivity">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/btn_smartrefreshlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.administrator.summarylearning.refreshandloadactivity.headlayout.MyHeader
            android:layout_width="match_parent"
            android:layout_height="100dp"></com.example.administrator.summarylearning.refreshandloadactivity.headlayout.MyHeader>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/start_refresh_success"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="下拉刷新并成功" />

            <Button
                android:id="@+id/start_refresh_fail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="下拉刷新并失败" />
            <TextView
                android:id="@+id/tv_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

       <com.example.administrator.summarylearning.refreshandloadactivity.headlayout.MyFooter
           android:layout_width="match_parent"
           android:layout_height="100dp"></com.example.administrator.summarylearning.refreshandloadactivity.headlayout.MyFooter>


    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</android.support.constraint.ConstraintLayout>